{
  "name": "angular-klaxon",
  "version": "1.0.0",
  "description": "Bootstrap-compatible, configurable alerts for your angular app.",
  "author": "Good Eggs <open-source@goodeggs.com>",
  "contributors": [
    "Max Edmands <me@maxedmands.com>"
  ],
  "license": "MIT",
  "keywords": [
    "angular alert bootstrap warning"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/goodeggs/ng-klaxon.git"
  },
  "homepage": "https://github.com/goodeggs/ng-klaxon",
  "bugs": "https://github.com/goodeggs/ng-klaxon/issues",
  "dependencies": {},
  "devDependencies": {
    "coffee-script": ">=1.8.x",
    "uglify-js": "^2.4.12",
    "browserify": "^3.32.0",
    "bower": "^1.3.1",
    "karma-sinon-chai": "^0.1.5",
    "karma-coffee-preprocessor": "^0.2.1",
    "karma-mocha": "^0.1.6",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma": "^0.12.21"
  },
  "scripts": {
    "compile": "coffee --bare --compile --output lib/ src/",
    "prepublish": "bower -sj install",
    "pretest": "npm run compile",
    "test": "karma start",
    "link": "browserify lib/index.js > {{ pkgname }}.js",
    "minify": "uglifyjs {{ pkgname }}.js > {{ pkgname }}.min.js",
    "build": "npm run compile && npm run link && npm run minify"
  }
}